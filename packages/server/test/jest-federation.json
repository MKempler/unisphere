{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".federation.spec.ts$",
  "transform": {
    "^.+\\.tsx?$": ["ts-jest", { "tsconfig": "../tsconfig.json" }]
  },
  "moduleNameMapper": {
    "^@unisphere/shared$": "<rootDir>/../shared/src"
  },
  "setupFilesAfterEnv": ["../jest.setup.ts"]
} 